package pr01_maker;

import java.util.Scanner;
public class CoffeeMaker {
	/*
	 * public static int start_coffeeSelect() {
	 * 
	 * }
	 */
	public static void main(String[] args) {
		
		final int coffee=0; final int milk=1;
		final int ice=2; final int chocolate=3;
		Scanner scan = new Scanner(System.in);
		//커피 재료 변수 인덱스 순서대로 coffee, milk, ice, chocolate
		int[] container = new int[4];
		//목록 선택을 위한 변수
		int selector;
		//벤딩머신 루프를 동작하는 플래그 표시
		boolean play_f = true;
		//관리모드 플래그
		boolean management_f = false;
		//프로그램의 시작 부분 
		while(play_f) {
			if(management_f) {
				System.out.print("커피 벤딩머신을 실행합니다.\n");
				System.out.print("원하는 모드를 골라주세요\n");
				System.out.print("[1]커피선택     [2]관리자모드");
				selector = scan.nextInt();
				//if(selector == 1)
			}
			else {
				System.out.print("회원정보가 없습니다 회원가입을 하겠습니까?");			
				System.out.print("Yes[1]   No[2]");
				
			}
			
		}
	}
}